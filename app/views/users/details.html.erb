<%= form_with url: "/users/#{params[:user_id]}/discover", method: :get, local: true do |f| %>
  <%= f.submit "Discover" %>
<% end %>

<%= form_with url: "/users/#{params[:user_id]}/movies/#{params[:id]}/viewing_party/new", method: :post, local: true do |f| %>
  <%= f.submit "Create a Viewing Party" %>
<% end %>

Title: <%= @movie_details.title %><br>
